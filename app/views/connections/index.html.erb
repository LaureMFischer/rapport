<div class="profile-info">
<h2><%= @linkedin_profile["first_name"] + ' ' + @linkedin_profile["last_name"] %></h2>
<h3><%= @linkedin_profile["headline"] %></h3>
</div>

<div class="import-button"><%= form_for @connection do |form| %>
  <%= form.submit "Import or Refresh LinkedIn Connections" %></div>
<% end %>

<% if user_signed_in? %>
<div class="panel panel-default">
  <div class="panel-heading">Contact Queue</div>
  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Headline</th>
      <th><span class="glyphicon glyphicon-calendar"></span>Date to Contact</th>
      <th></th>
      <th></th>
    </tr>
    <tr>
    <% if @connections.nil? == false %>
      <% @connections.each do |connection| %>
      <td><%= connection.first_name + ' ' + connection.last_name %></td>
      <td><%= connection.headline %></td>
      <td><%= connection.date %></td>
      <td><button type="button"><span class="glyphicon glyphicon-pencil"></span><%= link_to "", edit_connection_path(connection.id) %></button></td>
      <td><button type="button"><span class="glyphicon glyphicon-trash"></span><%= link_to "", connection_path(connection.id), method: :delete %></button></td>
      </tr>
      <% end %>
  </table>
  </div>
  <% else %>
  <% end %>
<% else %>
<% end %>


