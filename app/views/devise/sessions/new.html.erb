<div class="jumbotron">
  <h1>Build <em>Rapport</em></h1>
  <p>Enhance the value of your LinkedIn network.</p>
</div>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <button type="button" class="btn btn-default"><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></button><br />
  <% end -%>
<% end -%>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %><%= f.submit "Submit" %></div>
<% end %>


